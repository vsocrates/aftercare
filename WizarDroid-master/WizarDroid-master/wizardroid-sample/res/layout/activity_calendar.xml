<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <Button
        android:id="@+id/addAppointmentTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/addAppointmentDescription"
        android:onClick="addAppointmentClick" 
    	android:text="Add an Appointment" />

      <Button
          android:id="@+id/viewCalendarTextButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/addAppointmentTextButton"
          android:contentDescription="@string/viewCalendarDescription"
          android:onClick="viewCalendarClick"
          android:text="View the Calendar" />

</RelativeLayout>
